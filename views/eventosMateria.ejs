<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Eventos por Materia</title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f5f5f5; margin: 0; padding: 20px; }
        h1 { color: #333; text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { text-align: left; padding: 8px; border-bottom: 1px solid #ddd; }
        th { background-color: #4caf50; color: white; }
        tr:hover { background-color: #f5f5f5; }
        td { color: #333; }
    </style>
  </head>
  <body>
    <h1>
      Eventos de la Materia: <%= eventos[0]?.materia_nombre || 'No Especificada'
      %>
    </h1>
    <table>
      <thead>
        <tr>
          <th>Semana</th>
          <th>Evento</th>
          <th>Fecha</th>
          <th>Rasgos</th>
        </tr>
      </thead>
      <tbody>
        <% eventos.forEach(evento => { %>
        <tr>
          <td><%= evento.numero_semana %></td>
          <td><%= evento.evento_nombre %></td>
          <td><%= evento.fecha %></td>
          <td><%= evento.rasgos %></td>
        </tr>
        <% }) %> <% if(eventos.length === 0) { %>
        <tr>
          <td colspan="4">No hay eventos programados para esta materia.</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
