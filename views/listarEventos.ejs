<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Lista de Eventos</title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f5f5f5; margin: 0; padding: 20px; }
        h1 { color: #333; text-align: center; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { text-align: left; padding: 8px; border-bottom: 1px solid #ddd; }
        th { background-color: #4caf50; color: white; }
        tr:hover { background-color: #f5f5f5; }
        td { color: #333; }
    </style>
  </head>
  <body>
    <h1>Eventos</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Número de Semana</th>
          <th>Fecha</th>
          <th>Rasgos</th>
          <th>Materia</th>
          <th>Sección</th>
          <th>Global</th>
        </tr>
      </thead>
      <tbody>
        <% if(eventos.length > 0) { %> <% eventos.forEach(function(evento) { %>
        <tr>
          <td><%= evento.evento_id %></td>
          <td><%= evento.nombre %></td>
          <td><%= evento.numero_semana %></td>
          <td><%= evento.fecha ? evento.fecha : 'No especificado' %></td>
          <td><%= evento.rasgos %></td>
          <td><%= evento.materia_nombre %></td>
          <td><%= evento.seccion_nombre %></td>
          <td><%= evento.es_global ? 'Sí' : 'No' %></td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="8">No hay eventos para mostrar.</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
